<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="stack_pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TerminKalenderController">
   <children>
      <AnchorPane>
         <children>
            <ToggleButton fx:id="togglebutton" mnemonicParsing="false" onAction="#toggle_effekt" text="Mit Wiederholung" />
            <DatePicker fx:id="datepick" layoutX="120.0" />
            <TextField fx:id="beginn" layoutY="25.0" promptText="Beginn     hh-mm" />
            <TextField fx:id="dauer" layoutY="49.0" promptText="Dauer" />
            <TextField fx:id="beschreibung" layoutY="74.0" promptText="Beschreibung" />
            <Button fx:id="submitbutton" layoutY="99.0" mnemonicParsing="false" text="Submit" />
            <TextField fx:id="anzahl" layoutX="167.0" layoutY="50.0" promptText="Anzahl" />
            <TextField fx:id="zyklus" layoutX="167.0" layoutY="75.0" promptText="Zyklus" />
            <RadioButton fx:id="widtag" layoutX="167.0" layoutY="29.0" mnemonicParsing="false" selected="true" text="Täglich">
               <toggleGroup>
                  <ToggleGroup fx:id="wiederholung" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="widwoch" layoutX="242.0" layoutY="29.0" mnemonicParsing="false" text="Wöchentlich" toggleGroup="$wiederholung" />
         </children>
      </AnchorPane>
   </children>
</StackPane>
